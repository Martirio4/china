<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_gravity="center_vertical"
        android:layout_width="@dimen/anchoLayoutCargarProducto"
        android:layout_height="@dimen/altoLayoutaCargarProducto">
        <android.support.v7.widget.CardView
            android:layout_centerInParent="true"
            android:background="@color/Amarillo"
            android:elevation="@dimen/elevacionTarjetaCargaProducto"
            android:layout_width="@dimen/anchoFotoCargarProducto"
            android:layout_height="@dimen/altoFotoCargarProducto">

            <ImageView
                android:id="@+id/imagenCamara"
                android:layout_gravity="center"
                android:layout_width="@dimen/anchoFotoCargarProducto"
                android:layout_height="@dimen/altoFotoCargarProducto"
                android:scaleType="fitXY"
                android:src="@drawable/back" />

        </android.support.v7.widget.CardView>

    </RelativeLayout>

</LinearLayout>